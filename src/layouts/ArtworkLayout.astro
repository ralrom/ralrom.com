---
import dayjs from "dayjs";
import BaseLayout from "~src/layouts/BaseLayout.astro";

const { frontmatter } = Astro.props;
const { slug } = Astro.params;
---

<BaseLayout title={frontmatter.title}>
  <!-- Post Header -->
  <div class="container py-10">
    <div class="prose lg:prose-lg dark:prose-invert mx-auto">
      <span class="font-thin text-accent text-2xl">
        {dayjs(slug?.replace("/blog/", "").substring(0, 10)).format("MMM D, YYYY")}
      </span>
      <h1 class="text-text-primary sm:text-lg lg:text-4xl max-w-xl">{frontmatter.title}</h1>
      {frontmatter.medium && <p class="font-thin text-text-primary lg:text-lg">Medium: {frontmatter.medium}</p>}

      <slot />
    </div>
  </div>
</BaseLayout>
