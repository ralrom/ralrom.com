---
import { links } from "~src/links";
import MobileMenu from "./MobileMenu";
import { nav } from "~src/nav";
import { Icon } from 'astro-icon/components'
---

<nav
  class="fixed bg-primary-500 border-b border-black border-opacity-25 py-2.5 w-full z-50 top-0 left-0"
  style={{
    transform: "translateZ(99999px)",
  }}
>
  <div class="container">
    <div class="flex items-center justify-between">
      <a class="flex-shrink-0 group flex items-center" href="/">
        <img
          class="h-11 w-auto group-hover:rotate-90 transition-transform"
          src="/assets/website/logo.svg"
          alt="RalRom"
        />
        <div class="text-2xl font-semibold ml-2 text-white">RalRom</div>
      </a>

      <MobileMenu client:only="preact">
        <div class="flex flex-col gap-4">
          {
            links.map((link) => {
              return (
                <a
                  data-social={link.label}
                  href={link.link}
                  class="ralrom-social-link rounded-md bg-white/10 px-6 py-4 text-lg font-semibold text-white shadow-sm hover:bg-white/20 flex items-center gap-3"
                >
                  <Icon name={link.icon} class="w-6 h-6" />
                  {link.label}
                </a>
              );
            })
          }
        </div>
      </MobileMenu>

      <div class="hidden sm:flex gap-6">
        {
          nav.map((item) => (
            <a href={item.href} class={"font-medium text-blue-400 hover:text-secondary-500 transition-colors"}>
              {item.name}
            </a>
          ))
        }
      </div>
      <div class="hidden sm:flex gap-2">
        {
          links.map((link) => {
            return (
              <a
                data-social={link.label}
                href={link.link}
                class="ralrom-social-link rounded-md bg-white/10 p-2 text-lg font-semibold text-white shadow-sm hover:bg-white/20 flex items-center gap-3"
              >
                <Icon name={link.icon} class="w-6 h-6" />
              </a>
            );
          })
        }
      </div>
    </div>
  </div>
</nav>
