---
import { Icon } from "astro-icon/components";
import { links } from "~src/links";
import { nav } from "~src/nav";
---

<footer class="mt-40 bg-background dark:bg-background border-t border-border/20 pt-6 pb-6 sm:pb-20 z-20">
  <div class="container">
    <div class="flex flex-col sm:flex-row justify-between gap-6 text-center sm:text-left">
      <div class="flex flex-col gap-4">
        <nav class="flex flex-col sm:flex-row gap-4 sm:gap-6">
          {
            nav.map((item) => (
              <a href={item.href} class={"font-thin text-text-primary hover:text-accent transition-colors"}>
                <span>{item.name}</span>
              </a>
            ))
          }
        </nav>
        <div class="hidden sm:flex gap-2">
          {
            links.map((link) => {
              return (
                <a
                  aria-label={link.label}
                  data-social={link.label}
                  href={link.link}
                  class="ralrom-social-link rounded-md p-2 text-lg font-semibold text-text-primary hover:bg-surface flex items-center gap-3"
                >
                  <Icon name={link.icon} class="w-6 h-6" />
                </a>
              );
            })
          }
        </div>
      </div>
      <span class="text-text-secondary font-thin text-sm sm:text-base"
        >&copy; Robert Al-Romhein. All rights reserved.</span
      >
    </div>
  </div>
</footer>
