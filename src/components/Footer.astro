---
interface NavigationItem {
  name: string;
  href: string;
}

const navigation: NavigationItem[] = [
  { name: "Home", href: "/" },
  { name: "Blog", href: "/blog" },
];
---

<nav class="bg-primary-600 border-t border-black border-opacity-25 pt-6 pb-20 z-20">
  <div class="container">
    <div class="flex items-center justify-between">
      <div class="space-x-6 flex">
        {
          navigation.map((item) => (
            <a
              href={item.href}
              class={"flex items-center space-x-2 transition-colors uppercase tracking-wider text-primary-300"}
            >
              <span>{item.name}</span>
            </a>
          ))
        }
      </div>
      <span class="text-primary-300">&copy; Robert Al-Romhein 2022. All rights reserved.</span>
    </div>
  </div>
</nav>
